---
import { useTranslations, getLocalizedPath } from '../i18n/utils';
import { categories } from '../data/products';

interface Props {
  slug: string;
  name: string;
  categorySlug: string;
  ageRange: string;
  pricePerWeek: number;
  image: string;
  available: boolean;
  lang?: 'ca' | 'es';
}

const { slug, name, categorySlug, ageRange, pricePerWeek, image, available, lang = 'ca' } = Astro.props;
const t = useTranslations(lang);

// Get translated category name
const category = categories.find(c => c.slug === categorySlug);
const categoryName = category ? category.name[lang] : categorySlug;
---

<a href={`${getLocalizedPath('catalogo', lang)}/${slug}`} class="card group cursor-pointer transition-transform hover:-translate-y-1">
  <!-- Image -->
  <div class="aspect-square bg-white overflow-hidden">
    <img
      src={image}
      alt={name}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
    />
  </div>

  <!-- Content -->
  <div class="p-5">
    <div class="flex items-center gap-2 text-sm text-[var(--color-text-muted)] mb-2">
      <span>{categoryName}</span>
      <span>·</span>
      <span>{ageRange}</span>
    </div>

    <h3 class="font-semibold text-lg text-[var(--color-text-primary)] mb-3 line-clamp-2">
      {name}
    </h3>

    <div class="flex items-center justify-between">
      <div>
        <span class="text-[var(--color-brown-primary)] font-semibold">desde {pricePerWeek}€</span>
        <span class="text-[var(--color-text-muted)] text-sm">{t('product.porSemana')}</span>
      </div>

      <span class={`badge ${available ? 'badge-success' : 'badge-warning'}`}>
        <i class={`ph ph-${available ? 'check-circle' : 'clock'}`}></i>
        {available ? t('product.disponible') : t('product.noDisponible')}
      </span>
    </div>
  </div>
</a>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
