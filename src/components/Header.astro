---
import { getLangFromUrl, useTranslations, getLocalizedPath, getAlternateLang, getCurrentPathWithoutLang } from '../i18n/utils';

interface Props {
  lang?: 'ca' | 'es';
}

const { lang: propLang } = Astro.props;
const lang = propLang || getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const alternateLang = getAlternateLang(lang);
const currentPathWithoutLang = getCurrentPathWithoutLang(Astro.url);
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: getLocalizedPath('catalogo', lang), label: t('nav.catalogo') },
  { href: getLocalizedPath('com-funciona', lang), label: t('nav.comoFunciona') },
  { href: getLocalizedPath('qui-som', lang), label: t('nav.quienesSomos') },
];

const alternateUrl = getLocalizedPath(currentPathWithoutLang, alternateLang);
---

<header class="sticky top-0 z-50 bg-[var(--color-cream)]/95 backdrop-blur-sm">
  <div class="container pt-12 pb-6 md:pt-14 md:pb-8">
    <!-- Language Switcher (top right) -->
    <div class="flex justify-end mb-2">
      <div class="flex items-center gap-2">
        <a
          href={getLocalizedPath(currentPathWithoutLang, 'ca')}
          class={`flex items-center gap-1.5 px-2 py-1 rounded-md text-sm transition-colors ${
            lang === 'ca'
              ? 'bg-[var(--color-brown-primary)]/10 text-[var(--color-brown-primary)] font-medium'
              : 'text-[var(--color-text-muted)] hover:text-[var(--color-brown-primary)]'
          }`}
        >
          <img src="/flag-ca.webp" alt="Català" class="w-5 h-5 rounded-full object-cover" />
          <span class="hidden sm:inline">CA</span>
        </a>
        <a
          href={getLocalizedPath(currentPathWithoutLang, 'es')}
          class={`flex items-center gap-1.5 px-2 py-1 rounded-md text-sm transition-colors ${
            lang === 'es'
              ? 'bg-[var(--color-brown-primary)]/10 text-[var(--color-brown-primary)] font-medium'
              : 'text-[var(--color-text-muted)] hover:text-[var(--color-brown-primary)]'
          }`}
        >
          <img src="/flag-es.jpg" alt="Español" class="w-5 h-5 rounded-full object-cover" />
          <span class="hidden sm:inline">ES</span>
        </a>
      </div>
    </div>

    <nav class="flex items-center justify-between">
      <!-- Logo -->
      <a href={getLocalizedPath('', lang)} class="flex items-center gap-3">
        <img src="/logo.svg" alt="Compartirium" class="h-10 w-10" />
        <span class="text-xl font-semibold text-[var(--color-text-primary)]">Compartirium</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <a
            href={link.href}
            class={`text-base font-medium transition-colors ${
              currentPath.startsWith(link.href)
                ? 'text-[var(--color-brown-primary)]'
                : 'text-[var(--color-text-secondary)] hover:text-[var(--color-brown-primary)]'
            }`}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA Buttons -->
      <div class="flex items-center gap-3">
        <a href={getLocalizedPath('client', lang)} class="btn btn-secondary hidden sm:flex">
          <i class="ph ph-user-plus"></i>
          {t('nav.crearCuenta')}
        </a>
        <a href={getLocalizedPath('client', lang)} class="btn btn-primary">
          <i class="ph ph-user"></i>
          <span class="hidden sm:inline">{t('nav.acceder')}</span>
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 text-[var(--color-text-primary)]"
          aria-label="Menú"
        >
          <i class="ph ph-list text-2xl"></i>
        </button>
      </div>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      <div class="flex flex-col gap-4">
        {navLinks.map(link => (
          <a
            href={link.href}
            class={`text-base font-medium py-2 ${
              currentPath.startsWith(link.href)
                ? 'text-[var(--color-brown-primary)]'
                : 'text-[var(--color-text-secondary)]'
            }`}
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    const icon = menuBtn.querySelector('i');
    if (icon) {
      icon.classList.toggle('ph-list');
      icon.classList.toggle('ph-x');
    }
  });
</script>
