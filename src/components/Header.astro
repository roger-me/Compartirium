---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/catalogo', label: 'Catálogo' },
  { href: '/como-funciona', label: 'Cómo funciona' },
  { href: '/quienes-somos', label: 'Quiénes somos' },
];
---

<header class="sticky top-0 z-50 bg-[var(--color-cream)]/95 backdrop-blur-sm">
  <div class="container py-5 md:py-6">
    <nav class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <img src="/logo.svg" alt="Compartirium" class="h-10 w-10" />
        <span class="text-xl font-semibold text-[var(--color-text-primary)]">Compartirium</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <a
            href={link.href}
            class={`text-base font-medium transition-colors ${
              currentPath.startsWith(link.href)
                ? 'text-[var(--color-brown-primary)]'
                : 'text-[var(--color-text-secondary)] hover:text-[var(--color-brown-primary)]'
            }`}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA Button -->
      <div class="flex items-center gap-4">
        <a href="/cliente" class="btn btn-primary">
          <i class="ph ph-user"></i>
          <span class="hidden sm:inline">Acceder</span>
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 text-[var(--color-text-primary)]"
          aria-label="Menú"
        >
          <i class="ph ph-list text-2xl"></i>
        </button>
      </div>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      <div class="flex flex-col gap-4">
        {navLinks.map(link => (
          <a
            href={link.href}
            class={`text-base font-medium py-2 ${
              currentPath.startsWith(link.href)
                ? 'text-[var(--color-brown-primary)]'
                : 'text-[var(--color-text-secondary)]'
            }`}
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    const icon = menuBtn.querySelector('i');
    if (icon) {
      icon.classList.toggle('ph-list');
      icon.classList.toggle('ph-x');
    }
  });
</script>
