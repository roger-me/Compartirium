---
import { getLangFromUrl, useTranslations, getLocalizedPath, getAlternateLang, getCurrentPathWithoutLang } from '../i18n/utils';

interface Props {
  lang?: 'ca' | 'es';
}

const { lang: propLang } = Astro.props;
const lang = propLang || getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const alternateLang = getAlternateLang(lang);
const currentPathWithoutLang = getCurrentPathWithoutLang(Astro.url);
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: getLocalizedPath('catalogo', lang), label: t('nav.catalogo') },
  { href: getLocalizedPath('com-funciona', lang), label: t('nav.comoFunciona') },
  { href: getLocalizedPath('qui-som', lang), label: t('nav.quienesSomos') },
];

const alternateUrl = getLocalizedPath(currentPathWithoutLang, alternateLang);
---

<header class="fixed top-0 left-0 right-0 z-50 pt-4">
  <div class="container">
    <div class="flex items-center gap-3">
      <!-- Main Navigation Container -->
      <div id="nav-container" class="flex-1 bg-[var(--color-cream-light)]/90 backdrop-blur-md rounded-[100px] shadow-lg p-[14px] transition-all duration-300">
        <nav class="flex items-center justify-between">
          <!-- Logo -->
          <a href={getLocalizedPath('', lang)} class="flex items-center gap-3">
            <img src="/logo.svg" alt="Compartirium" class="h-10 w-10" />
            <span class="text-xl font-semibold text-[var(--color-text-primary)]">Compartirium</span>
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-2">
            {navLinks.map(link => (
              <a
                href={link.href}
                class={`text-base font-medium transition-colors px-4 py-2 rounded-[100px] ${
                  currentPath.startsWith(link.href)
                    ? 'bg-[var(--color-brown-primary)]/10 text-[var(--color-brown-primary)]'
                    : 'text-[var(--color-text-secondary)] hover:text-[var(--color-brown-primary)] hover:bg-[var(--color-brown-primary)]/5'
                }`}
              >
                {link.label}
              </a>
            ))}
          </div>

          <!-- CTA Button -->
          <div class="flex items-center gap-3">
            <a href={getLocalizedPath('cliente', lang)} class="btn btn-primary hidden md:flex">
              <i class="ph ph-user"></i>
              {t('nav.acceder')}
            </a>

            <!-- Mobile Menu Button -->
            <button
              id="mobile-menu-btn"
              class="md:hidden p-2 text-[var(--color-text-primary)]"
              aria-label="Menú"
            >
              <i class="ph ph-list text-2xl"></i>
            </button>
          </div>
        </nav>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
          <div class="flex flex-col gap-4">
            {navLinks.map(link => (
              <a
                href={link.href}
                class={`text-base font-medium py-2 ${
                  currentPath.startsWith(link.href)
                    ? 'text-[var(--color-brown-primary)]'
                    : 'text-[var(--color-text-secondary)]'
                }`}
              >
                {link.label}
              </a>
            ))}
            <a href={getLocalizedPath('cliente', lang)} class="btn btn-primary mt-2">
              <i class="ph ph-user"></i>
              {t('nav.acceder')}
            </a>
          </div>
        </div>
      </div>

      <!-- Language Switcher Container -->
      <div class="bg-[var(--color-cream-light)]/90 backdrop-blur-md rounded-[34px] shadow-lg p-[8px] hidden sm:flex items-center gap-0">
        <a
          href={getLocalizedPath(currentPathWithoutLang, 'ca')}
          class={`flex items-center gap-1 px-2 py-1.5 text-sm transition-colors ${
            lang === 'ca'
              ? 'bg-[var(--color-brown-primary)]/10 text-[var(--color-brown-primary)] font-medium rounded-[34px]'
              : 'text-[var(--color-text-muted)] hover:text-[var(--color-brown-primary)]'
          }`}
        >
          <img src="/flag-ca.webp" alt="Català" class="w-4 h-4 rounded-full object-cover" />
          <span>CA</span>
        </a>
        <a
          href={getLocalizedPath(currentPathWithoutLang, 'es')}
          class={`flex items-center gap-1 px-2 py-1.5 text-sm transition-colors ${
            lang === 'es'
              ? 'bg-[var(--color-brown-primary)]/10 text-[var(--color-brown-primary)] font-medium rounded-[34px]'
              : 'text-[var(--color-text-muted)] hover:text-[var(--color-brown-primary)]'
          }`}
        >
          <img src="/flag-es.jpg" alt="Español" class="w-4 h-4 rounded-full object-cover" />
          <span>ES</span>
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const navContainer = document.getElementById('nav-container');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    const icon = menuBtn.querySelector('i');
    if (icon) {
      icon.classList.toggle('ph-list');
      icon.classList.toggle('ph-x');
    }
    // Toggle border radius when menu opens/closes
    if (navContainer) {
      const isOpen = !mobileMenu?.classList.contains('hidden');
      navContainer.style.borderRadius = isOpen ? '34px' : '100px';
    }
  });
</script>
