---
import Layout from '../layouts/Layout.astro';
import { useTranslations, getLocalizedPath } from '../i18n/utils';

const lang = 'ca';
const t = useTranslations(lang);
---

<Layout title={t('comoFunciona.title')} lang={lang}>
  <!-- Hero -->
  <section class="py-10 bg-[var(--color-cream-light)]">
    <div class="container">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-semibold mb-6">{t('comoFunciona.hero.title')}</h1>
        <p class="text-xl text-[var(--color-text-secondary)]">
          {t('comoFunciona.hero.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Steps -->
  <section class="py-10">
    <div class="container">
      <div class="space-y-8">
        <!-- Step 1 -->
        <div class="card p-8 md:p-10">
          <div class="flex flex-col md:flex-row gap-8 md:items-stretch">
            <div class="flex-shrink-0 pt-1">
              <div class="w-14 h-14 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center text-xl font-semibold">
                1
              </div>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-semibold mb-3">{t('comoFunciona.step1.title')}</h2>
              <p class="text-lg text-[var(--color-text-secondary)] mb-4">
                {t('comoFunciona.step1.desc')}
              </p>
              <ul class="space-y-2 text-base">
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span>{t('comoFunciona.step1.bullet1')}</span>
                </li>
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span>{t('comoFunciona.step1.bullet2')}</span>
                </li>
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span>{t('comoFunciona.step1.bullet3')}</span>
                </li>
              </ul>
            </div>
            <div class="w-full md:w-72 flex-shrink-0 flex">
              <div class="rounded-2xl overflow-hidden flex-1">
                <img
                  src="https://images.unsplash.com/photo-1524995997946-a1c2e315a42f?w=600&h=400&fit=crop"
                  alt="CatÃ leg de llibres i material educatiu"
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>

        <!-- Step 2 -->
        <div class="card p-8 md:p-10">
          <div class="flex flex-col md:flex-row gap-8 md:items-stretch">
            <div class="flex-shrink-0 pt-1">
              <div class="w-14 h-14 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center text-xl font-semibold">
                2
              </div>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-semibold mb-3">{t('comoFunciona.step2.title')}</h2>
              <p class="text-lg text-[var(--color-text-secondary)] mb-4">
                {t('comoFunciona.step2.desc')}
              </p>
              <ul class="space-y-2 text-base">
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span><strong>{t('comoFunciona.step2.bullet1')}</strong> {t('comoFunciona.step2.bullet1b')}</span>
                </li>
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span><strong>{t('comoFunciona.step2.bullet2')}</strong> {t('comoFunciona.step2.bullet2b')}</span>
                </li>
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span><strong>{t('comoFunciona.step2.bullet3')}</strong> {t('comoFunciona.step2.bullet3b')}</span>
                </li>
              </ul>
            </div>
            <div class="w-full md:w-72 flex-shrink-0 flex">
              <div class="rounded-2xl overflow-hidden flex-1">
                <img
                  src="https://images.unsplash.com/photo-1506784365847-bbad939e9335?w=600&h=400&fit=crop"
                  alt="Calendari"
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>

        <!-- Step 3 -->
        <div class="card p-8 md:p-10">
          <div class="flex flex-col md:flex-row gap-8 md:items-stretch">
            <div class="flex-shrink-0 pt-1">
              <div class="w-14 h-14 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center text-xl font-semibold">
                3
              </div>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-semibold mb-3">{t('comoFunciona.step3.title')}</h2>
              <p class="text-lg text-[var(--color-text-secondary)] mb-4">
                {t('comoFunciona.step3.desc')}
              </p>
              <ul class="space-y-2 text-base">
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span>{t('comoFunciona.step3.bullet1')}</span>
                </li>
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span>{t('comoFunciona.step3.bullet2')}</span>
                </li>
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span>{t('comoFunciona.step3.bullet3')}</span>
                </li>
              </ul>
            </div>
            <div class="w-full md:w-72 flex-shrink-0 flex">
              <div class="rounded-2xl overflow-hidden flex-1">
                <img
                  src="https://images.unsplash.com/photo-1456513080510-7bf3a84b82f8?w=600&h=400&fit=crop"
                  alt="Llibres a casa"
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>

        <!-- Step 4 -->
        <div class="card p-8 md:p-10">
          <div class="flex flex-col md:flex-row gap-8 md:items-stretch">
            <div class="flex-shrink-0 pt-1">
              <div class="w-14 h-14 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center text-xl font-semibold">
                4
              </div>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-semibold mb-3">{t('comoFunciona.step4.title')}</h2>
              <p class="text-lg text-[var(--color-text-secondary)] mb-4">
                {t('comoFunciona.step4.desc')}
              </p>
              <ul class="space-y-2 text-base">
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span>{t('comoFunciona.step4.bullet1')}</span>
                </li>
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span>{t('comoFunciona.step4.bullet2')}</span>
                </li>
                <li class="flex items-start gap-2 text-[var(--color-text-secondary)]">
                  <i class="ph-fill ph-check-circle text-[var(--color-success)] mt-0.5"></i>
                  <span>{t('comoFunciona.step4.bullet3')}</span>
                </li>
              </ul>
            </div>
            <div class="w-full md:w-72 flex-shrink-0 flex">
              <div class="rounded-2xl overflow-hidden flex-1">
                <img
                  src="https://images.unsplash.com/photo-1456735190827-d1262f71b8a3?w=600&h=400&fit=crop"
                  alt="Material escolar reutilitzat"
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- For Schools -->
  <section class="py-10 bg-[var(--color-cream-light)]">
    <div class="container">
      <div>
        <div class="text-center mb-12">
          <h2 class="text-3xl font-semibold mb-4">{t('comoFunciona.escuelas.title')}</h2>
          <p class="text-[var(--color-text-secondary)]">
            {t('comoFunciona.escuelas.subtitle')}
          </p>
        </div>

        <div class="card p-8">
          <div class="grid md:grid-cols-3 gap-8">
            <div class="text-center">
              <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)]/10 flex items-center justify-center">
                <i class="ph ph-calendar-check text-2xl text-[var(--color-brown-primary)]"></i>
              </div>
              <h3 class="text-xl font-semibold mb-2">{t('comoFunciona.escuelas.planifica.title')}</h3>
              <p class="text-base text-[var(--color-text-secondary)]">
                {t('comoFunciona.escuelas.planifica.desc')}
              </p>
            </div>
            <div class="text-center">
              <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)]/10 flex items-center justify-center">
                <i class="ph ph-arrows-clockwise text-2xl text-[var(--color-brown-primary)]"></i>
              </div>
              <h3 class="text-xl font-semibold mb-2">{t('comoFunciona.escuelas.renovacion.title')}</h3>
              <p class="text-base text-[var(--color-text-secondary)]">
                {t('comoFunciona.escuelas.renovacion.desc')}
              </p>
            </div>
            <div class="text-center">
              <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)]/10 flex items-center justify-center">
                <i class="ph ph-users-three text-2xl text-[var(--color-brown-primary)]"></i>
              </div>
              <h3 class="text-xl font-semibold mb-2">{t('comoFunciona.escuelas.multiusuario.title')}</h3>
              <p class="text-base text-[var(--color-text-secondary)]">
                {t('comoFunciona.escuelas.multiusuario.desc')}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-10">
    <div class="container">
      <div class="text-center">
        <h2 class="text-3xl font-semibold mb-4">{t('comoFunciona.cta.title')}</h2>
        <p class="text-lg text-[var(--color-text-secondary)] mb-8">
          {t('comoFunciona.cta.subtitle')}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={getLocalizedPath('catalogo', lang)} class="btn btn-primary">
            <i class="ph ph-magnifying-glass"></i>
            {t('comoFunciona.cta.catalogo')}
          </a>
          <a href={getLocalizedPath('client', lang)} class="btn btn-secondary">
            <i class="ph ph-user-plus"></i>
            {t('comoFunciona.cta.cuenta')}
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
