---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
import { products, categories, stages } from '../../data/products';
import { useTranslations } from '../../i18n/utils';

const lang = 'ca';
const t = useTranslations(lang);
---

<Layout title={t('catalogo.title')} lang={lang}>
  <section class="py-12">
    <div class="container">
      <!-- Header -->
      <div class="mb-10">
        <h1 class="animate-hero text-4xl font-semibold mb-4">{t('catalogo.hero.title')}</h1>
        <p class="animate-hero-delay text-[var(--color-text-secondary)] text-lg">
          {t('catalogo.hero.subtitle')}
        </p>
      </div>

      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Filters Sidebar -->
        <aside class="lg:w-72 flex-shrink-0">
          <div class="animate-on-scroll card p-6 sticky top-24">
            <div class="flex items-center justify-between mb-6">
              <h2 class="font-semibold text-lg">Filtres</h2>
              <button class="text-sm text-[var(--color-brown-primary)]" id="clear-filters">
                {t('catalogo.limpiarFiltros')}
              </button>
            </div>

            <!-- Search -->
            <div class="mb-6">
              <label class="block text-sm font-medium mb-2">Cercar</label>
              <input
                type="text"
                id="search-input"
                placeholder="Cercar..."
              />
            </div>

            <!-- Category Filter -->
            <div class="mb-6">
              <label class="block text-sm font-medium mb-3">Categoria</label>
              <div class="space-y-2">
                {categories.map(category => (
                  <label class="flex items-center gap-3 cursor-pointer">
                    <input
                      type="checkbox"
                      name="category"
                      value={category.slug}
                      class="w-4 h-4 rounded border-[var(--color-text-muted)] text-[var(--color-brown-primary)] focus:ring-[var(--color-brown-primary)]"
                    />
                    <span class="text-sm">{category.name[lang]}</span>
                  </label>
                ))}
              </div>
            </div>

            <!-- Stage Filter -->
            <div class="mb-6">
              <label class="block text-sm font-medium mb-3">Etapa educativa</label>
              <div class="space-y-2">
                {stages.map(stage => (
                  <label class="flex items-center gap-3 cursor-pointer">
                    <input
                      type="checkbox"
                      name="stage"
                      value={stage.slug}
                      class="w-4 h-4 rounded border-[var(--color-text-muted)] text-[var(--color-brown-primary)] focus:ring-[var(--color-brown-primary)]"
                    />
                    <span class="text-sm">{stage.name[lang]} ({stage.ageRange[lang]})</span>
                  </label>
                ))}
              </div>
            </div>

            <!-- Availability Filter -->
            <div class="mb-6">
              <label class="block text-sm font-medium mb-3">Disponibilitat</label>
              <div class="space-y-2">
                <label class="flex items-center gap-3 cursor-pointer">
                  <input
                    type="checkbox"
                    name="availability"
                    value="available"
                    class="w-4 h-4 rounded border-[var(--color-text-muted)] text-[var(--color-brown-primary)] focus:ring-[var(--color-brown-primary)]"
                  />
                  <span class="text-sm">{t('product.disponible')}</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                  <input
                    type="checkbox"
                    name="availability"
                    value="soon"
                    class="w-4 h-4 rounded border-[var(--color-text-muted)] text-[var(--color-brown-primary)] focus:ring-[var(--color-brown-primary)]"
                  />
                  <span class="text-sm">Properament</span>
                </label>
              </div>
            </div>

            <!-- Price Range -->
            <div>
              <label class="block text-sm font-medium mb-3">Preu per setmana</label>
              <div class="flex items-center gap-3">
                <input type="number" placeholder="Min" class="w-full text-sm py-2" />
                <span class="text-[var(--color-text-muted)]">-</span>
                <input type="number" placeholder="Max" class="w-full text-sm py-2" />
              </div>
            </div>
          </div>
        </aside>

        <!-- Products Grid -->
        <div class="flex-1">
          <!-- Results header -->
          <div class="animate-on-scroll flex items-center justify-between mb-6">
            <p class="text-[var(--color-text-secondary)]">
              <span id="product-count">{products.length}</span> {t('catalogo.productos')}
            </p>
            <select class="w-auto text-sm py-2 px-4">
              <option>Ordenar per rellev√†ncia</option>
              <option>Preu: menor a major</option>
              <option>Preu: major a menor</option>
              <option>Nom A-Z</option>
            </select>
          </div>

          <!-- Products -->
          <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6" id="products-grid">
            {products.map(product => (
              <ProductCard
                slug={product.slug}
                name={product.name}
                categorySlug={product.categorySlug}
                ageRange={product.ageRange}
                pricePerWeek={product.pricePerWeek}
                image={product.image}
                available={product.available}
                lang={lang}
              />
            ))}
          </div>

          <!-- Empty state (hidden by default) -->
          <div id="empty-state" class="hidden text-center py-16">
            <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-[var(--color-brown-primary)]/10 flex items-center justify-center">
              <i class="ph ph-magnifying-glass text-4xl text-[var(--color-brown-primary)]"></i>
            </div>
            <h3 class="text-xl font-semibold mb-2">{t('catalogo.sinResultados')}</h3>
            <p class="text-[var(--color-text-secondary)] mb-6">
              Prova de modificar els filtres o cercar amb altres termes
            </p>
            <button class="btn btn-secondary" id="reset-search">
              {t('catalogo.limpiarFiltros')}
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  input[type="checkbox"] {
    width: 1rem;
    height: 1rem;
    padding: 0;
  }
</style>
