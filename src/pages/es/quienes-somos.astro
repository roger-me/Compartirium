---
import Layout from '../../layouts/Layout.astro';
import { useTranslations, getLocalizedPath } from '../../i18n/utils';

const lang = 'es';
const t = useTranslations(lang);
---

<Layout title={t('quienesSomos.title')} lang={lang}>
  <!-- Hero -->
  <section class="py-10 bg-[var(--color-cream-light)]">
    <div class="container">
      <div class="text-center">
        <h1 class="animate-hero text-4xl md:text-5xl font-semibold mb-6">{t('quienesSomos.hero.title')}</h1>
        <p class="animate-hero-delay text-xl text-[var(--color-text-secondary)]">
          {t('quienesSomos.hero.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Mission -->
  <section class="py-10">
    <div class="container">
      <div>
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="animate-on-scroll">
            <h2 class="text-3xl font-semibold mb-6">{t('quienesSomos.mision.title')}</h2>
            <p class="text-lg text-[var(--color-text-secondary)] mb-4">
              {t('quienesSomos.mision.p1')}
            </p>
            <p class="text-lg text-[var(--color-text-secondary)]">
              {t('quienesSomos.mision.p2')}
            </p>
          </div>
          <div class="animate-on-scroll card p-8">
            <blockquote class="text-xl italic mb-4 text-[var(--color-text-primary)]">
              {t('quienesSomos.mision.quote')}
            </blockquote>
            <p class="text-[var(--color-text-secondary)]">{t('quienesSomos.mision.author')}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="py-10 bg-[var(--color-cream-light)]">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="animate-on-scroll text-3xl font-semibold mb-4">{t('quienesSomos.equipo.title')}</h2>
        <p class="animate-on-scroll text-lg text-[var(--color-text-secondary)]">
          {t('quienesSomos.equipo.subtitle')}
        </p>
      </div>

      <div class="animate-on-scroll mb-12">
        <img
          src="/team.png"
          alt="Equipo Compartirium: Albert, Nil, NÃºria y Laia"
          class="w-full rounded-[var(--radius-container)] shadow-lg"
        />
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 stagger-children">
        <div class="animate-on-scroll card p-6 text-center">
          <h3 class="font-semibold text-xl mb-2">{t('quienesSomos.equipo.albert.name')}</h3>
          <p class="text-sm text-[var(--color-text-secondary)]">
            {t('quienesSomos.equipo.albert.desc')}
          </p>
        </div>

        <div class="animate-on-scroll card p-6 text-center">
          <h3 class="font-semibold text-xl mb-2">{t('quienesSomos.equipo.nil.name')}</h3>
          <p class="text-sm text-[var(--color-text-secondary)]">
            {t('quienesSomos.equipo.nil.desc')}
          </p>
        </div>

        <div class="animate-on-scroll card p-6 text-center">
          <h3 class="font-semibold text-xl mb-2">{t('quienesSomos.equipo.nuria.name')}</h3>
          <p class="text-sm text-[var(--color-text-secondary)]">
            {t('quienesSomos.equipo.nuria.desc')}
          </p>
        </div>

        <div class="animate-on-scroll card p-6 text-center">
          <h3 class="font-semibold text-xl mb-2">{t('quienesSomos.equipo.laia.name')}</h3>
          <p class="text-sm text-[var(--color-text-secondary)]">
            {t('quienesSomos.equipo.laia.desc')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-10">
    <div class="container">
      <div>
        <h2 class="animate-on-scroll text-3xl font-semibold text-center mb-12">{t('quienesSomos.valores.title')}</h2>

        <div class="grid md:grid-cols-3 gap-8 stagger-children">
          <div class="animate-on-scroll card p-8 text-center">
            <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-[var(--color-success)]/10 flex items-center justify-center">
              <i class="ph ph-leaf text-3xl text-[var(--color-success)]"></i>
            </div>
            <h3 class="font-semibold text-xl mb-3">{t('quienesSomos.valores.sostenibilidad.title')}</h3>
            <p class="text-base text-[var(--color-text-secondary)]">
              {t('quienesSomos.valores.sostenibilidad.desc')}
            </p>
          </div>

          <div class="animate-on-scroll card p-8 text-center">
            <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-[var(--color-brown-primary)]/10 flex items-center justify-center">
              <i class="ph ph-handshake text-3xl text-[var(--color-brown-primary)]"></i>
            </div>
            <h3 class="font-semibold text-xl mb-3">{t('quienesSomos.valores.accesibilidad.title')}</h3>
            <p class="text-base text-[var(--color-text-secondary)]">
              {t('quienesSomos.valores.accesibilidad.desc')}
            </p>
          </div>

          <div class="animate-on-scroll card p-8 text-center">
            <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-[var(--color-warning)]/10 flex items-center justify-center">
              <i class="ph ph-heart text-3xl text-[var(--color-warning)]"></i>
            </div>
            <h3 class="font-semibold text-xl mb-3">{t('quienesSomos.valores.comunidad.title')}</h3>
            <p class="text-base text-[var(--color-text-secondary)]">
              {t('quienesSomos.valores.comunidad.desc')}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How we work -->
  <section class="py-10">
    <div class="container">
      <div>
        <h2 class="animate-on-scroll text-3xl font-semibold text-center mb-12">{t('quienesSomos.trabajo.title')}</h2>

        <div class="space-y-8">
          <div class="animate-on-scroll flex gap-6 items-start">
            <div class="w-12 h-12 flex-shrink-0 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center font-semibold">
              1
            </div>
            <div>
              <h3 class="font-semibold text-xl mb-2">{t('quienesSomos.trabajo.1.title')}</h3>
              <p class="text-lg text-[var(--color-text-secondary)]">
                {t('quienesSomos.trabajo.1.desc')}
              </p>
            </div>
          </div>

          <div class="animate-on-scroll flex gap-6 items-start">
            <div class="w-12 h-12 flex-shrink-0 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center font-semibold">
              2
            </div>
            <div>
              <h3 class="font-semibold text-xl mb-2">{t('quienesSomos.trabajo.2.title')}</h3>
              <p class="text-lg text-[var(--color-text-secondary)]">
                {t('quienesSomos.trabajo.2.desc')}
              </p>
            </div>
          </div>

          <div class="animate-on-scroll flex gap-6 items-start">
            <div class="w-12 h-12 flex-shrink-0 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center font-semibold">
              3
            </div>
            <div>
              <h3 class="font-semibold text-xl mb-2">{t('quienesSomos.trabajo.3.title')}</h3>
              <p class="text-lg text-[var(--color-text-secondary)]">
                {t('quienesSomos.trabajo.3.desc')}
              </p>
            </div>
          </div>

          <div class="animate-on-scroll flex gap-6 items-start">
            <div class="w-12 h-12 flex-shrink-0 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center font-semibold">
              4
            </div>
            <div>
              <h3 class="font-semibold text-xl mb-2">{t('quienesSomos.trabajo.4.title')}</h3>
              <p class="text-lg text-[var(--color-text-secondary)]">
                {t('quienesSomos.trabajo.4.desc')}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Impact -->
  <section class="py-10 bg-[var(--color-cream-light)]">
    <div class="container">
      <div>
        <h2 class="animate-on-scroll text-3xl font-semibold text-center mb-12">{t('quienesSomos.impacto.title')}</h2>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 stagger-children">
          <div class="animate-on-scroll card p-6 text-center">
            <p class="text-4xl font-semibold text-[var(--color-brown-primary)] mb-2">+500</p>
            <p class="text-sm text-[var(--color-text-secondary)]">{t('quienesSomos.impacto.material')}</p>
          </div>
          <div class="animate-on-scroll card p-6 text-center">
            <p class="text-4xl font-semibold text-[var(--color-brown-primary)] mb-2">+50</p>
            <p class="text-sm text-[var(--color-text-secondary)]">{t('quienesSomos.impacto.escuelas')}</p>
          </div>
          <div class="animate-on-scroll card p-6 text-center">
            <p class="text-4xl font-semibold text-[var(--color-brown-primary)] mb-2">+200</p>
            <p class="text-sm text-[var(--color-text-secondary)]">{t('quienesSomos.impacto.familias')}</p>
          </div>
          <div class="animate-on-scroll card p-6 text-center">
            <p class="text-4xl font-semibold text-[var(--color-brown-primary)] mb-2">8x</p>
            <p class="text-sm text-[var(--color-text-secondary)]">{t('quienesSomos.impacto.vidas')}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Donations CTA -->
  <section class="py-10">
    <div class="container">
      <div>
        <div class="animate-on-scroll card p-8 md:p-12">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <h2 class="text-3xl font-semibold mb-4 text-[var(--color-text-primary)]">{t('quienesSomos.donar.title')}</h2>
              <p class="text-lg text-[var(--color-text-secondary)] mb-6">
                {t('quienesSomos.donar.desc')}
              </p>
              <a href="#" class="btn btn-secondary">
                <i class="ph ph-gift"></i>
                {t('quienesSomos.donar.button')}
              </a>
            </div>
            <div class="text-center">
              <div class="w-32 h-32 mx-auto rounded-full flex items-center justify-center bg-[var(--color-brown-primary)]/10">
                <i class="ph ph-hand-heart text-6xl text-[var(--color-brown-primary)]"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section class="py-10 bg-[var(--color-cream-light)]">
    <div class="container">
      <div class="text-center">
        <h2 class="animate-on-scroll text-3xl font-semibold mb-4">{t('quienesSomos.contacto.title')}</h2>
        <p class="animate-on-scroll text-lg text-[var(--color-text-secondary)] mb-8">
          {t('quienesSomos.contacto.desc')}
        </p>

        <div class="grid sm:grid-cols-3 gap-6 stagger-children">
          <div class="animate-on-scroll card p-6 text-center">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)]/10 flex items-center justify-center">
              <i class="ph ph-envelope text-xl text-[var(--color-brown-primary)]"></i>
            </div>
            <p class="font-medium">{t('quienesSomos.contacto.email')}</p>
            <p class="text-sm text-[var(--color-text-muted)]">hola@compartirium.es</p>
          </div>
          <div class="animate-on-scroll card p-6 text-center">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)]/10 flex items-center justify-center">
              <i class="ph ph-phone text-xl text-[var(--color-brown-primary)]"></i>
            </div>
            <p class="font-medium">{t('quienesSomos.contacto.telefono')}</p>
            <p class="text-sm text-[var(--color-text-muted)]">+34 93 123 45 67</p>
          </div>
          <div class="animate-on-scroll card p-6 text-center">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)]/10 flex items-center justify-center">
              <i class="ph ph-map-pin text-xl text-[var(--color-brown-primary)]"></i>
            </div>
            <p class="font-medium">{t('quienesSomos.contacto.direccion')}</p>
            <p class="text-sm text-[var(--color-text-muted)]">Barcelona</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
