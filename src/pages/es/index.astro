---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
import { products, categories } from '../../data/products';
import { useTranslations, getLocalizedPath } from '../../i18n/utils';

const lang = 'es';
const t = useTranslations(lang);
const featuredProducts = products.filter(p => p.available).slice(0, 4);
---

<Layout title={t('home.title')} lang={lang}>
  <!-- Hero Section -->
  <section class="py-20 md:py-32">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold text-[var(--color-text-primary)] mb-6 leading-tight">
          {t('home.hero.title')}
          <span class="text-[var(--color-brown-primary)]">{t('home.hero.highlight')}</span>
        </h1>
        <p class="text-xl text-[var(--color-text-secondary)] mb-10 max-w-2xl mx-auto">
          {t('home.hero.subtitle')}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={getLocalizedPath('catalogo', lang)} class="btn btn-primary text-lg px-8 py-4">
            <i class="ph ph-magnifying-glass"></i>
            {t('home.hero.explorar')}
          </a>
          <a href={getLocalizedPath('com-funciona', lang)} class="btn btn-secondary text-lg px-8 py-4">
            <i class="ph ph-play-circle"></i>
            {t('home.hero.comoFunciona')}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-10 bg-[var(--color-cream-light)]">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-semibold mb-4">{t('home.categorias.title')}</h2>
        <p class="text-[var(--color-text-secondary)]">{t('home.categorias.subtitle')}</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {categories.map(category => (
          <a
            href={`${getLocalizedPath('catalogo', lang)}?categoria=${category.slug}`}
            class="card p-6 text-center hover:-translate-y-1 transition-transform"
          >
            <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)]/10 flex items-center justify-center">
              <i class={`ph ph-${category.icon} text-2xl text-[var(--color-brown-primary)]`}></i>
            </div>
            <h3 class="font-medium text-sm">{category.name[lang]}</h3>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-10">
    <div class="container">
      <div class="flex justify-between items-end mb-10">
        <div>
          <h2 class="text-3xl font-semibold mb-2">{t('home.productos.title')}</h2>
          <p class="text-[var(--color-text-secondary)]">{t('home.productos.subtitle')}</p>
        </div>
        <a href={getLocalizedPath('catalogo', lang)} class="btn btn-secondary hidden md:flex">
          {t('home.productos.verTodo')}
          <i class="ph ph-arrow-right"></i>
        </a>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {featuredProducts.map(product => (
          <ProductCard
            slug={product.slug}
            name={product.name}
            categorySlug={product.categorySlug}
            ageRange={product.ageRange}
            pricePerWeek={product.pricePerWeek}
            image={product.image}
            available={product.available}
            lang={lang}
          />
        ))}
      </div>

      <div class="mt-8 text-center md:hidden">
        <a href={getLocalizedPath('catalogo', lang)} class="btn btn-secondary">
          {t('home.productos.verCatalogo')}
          <i class="ph ph-arrow-right"></i>
        </a>
      </div>
    </div>
  </section>

  <!-- How it Works -->
  <section class="py-10 bg-[var(--color-cream-light)]">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-semibold mb-4">{t('home.pasos.title')}</h2>
        <p class="text-[var(--color-text-secondary)]">{t('home.pasos.subtitle')}</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center text-2xl font-semibold">
            1
          </div>
          <h3 class="font-semibold text-lg mb-2">{t('home.pasos.1.title')}</h3>
          <p class="text-[var(--color-text-secondary)] text-sm">
            {t('home.pasos.1.desc')}
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center text-2xl font-semibold">
            2
          </div>
          <h3 class="font-semibold text-lg mb-2">{t('home.pasos.2.title')}</h3>
          <p class="text-[var(--color-text-secondary)] text-sm">
            {t('home.pasos.2.desc')}
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center text-2xl font-semibold">
            3
          </div>
          <h3 class="font-semibold text-lg mb-2">{t('home.pasos.3.title')}</h3>
          <p class="text-[var(--color-text-secondary)] text-sm">
            {t('home.pasos.3.desc')}
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)] text-white flex items-center justify-center text-2xl font-semibold">
            4
          </div>
          <h3 class="font-semibold text-lg mb-2">{t('home.pasos.4.title')}</h3>
          <p class="text-[var(--color-text-secondary)] text-sm">
            {t('home.pasos.4.desc')}
          </p>
        </div>
      </div>

      <div class="text-center mt-10">
        <a href={getLocalizedPath('com-funciona', lang)} class="btn btn-secondary">
          {t('home.pasos.masInfo')}
          <i class="ph ph-arrow-right"></i>
        </a>
      </div>
    </div>
  </section>

  <!-- Stats / Value Props -->
  <section class="py-10">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card p-8 text-center">
          <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-[var(--color-success)]/10 flex items-center justify-center">
            <i class="ph ph-leaf text-2xl text-[var(--color-success)]"></i>
          </div>
          <h3 class="text-2xl font-semibold mb-2">+500kg</h3>
          <p class="text-[var(--color-text-secondary)]">{t('home.stats.material')}</p>
        </div>

        <div class="card p-8 text-center">
          <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-[var(--color-brown-primary)]/10 flex items-center justify-center">
            <i class="ph ph-graduation-cap text-2xl text-[var(--color-brown-primary)]"></i>
          </div>
          <h3 class="text-2xl font-semibold mb-2">+50</h3>
          <p class="text-[var(--color-text-secondary)]">{t('home.stats.escuelas')}</p>
        </div>

        <div class="card p-8 text-center">
          <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-[var(--color-warning)]/10 flex items-center justify-center">
            <i class="ph ph-hand-heart text-2xl text-[var(--color-warning)]"></i>
          </div>
          <h3 class="text-2xl font-semibold mb-2">+200</h3>
          <p class="text-[var(--color-text-secondary)]">{t('home.stats.familias')}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-10 bg-[var(--color-brown-primary)]">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center text-white">
        <h2 class="text-3xl font-semibold mb-4">{t('home.cta.title')}</h2>
        <p class="text-white/80 mb-8">
          {t('home.cta.subtitle')}
        </p>
        <a href={getLocalizedPath('catalogo', lang)} class="btn bg-white text-[var(--color-brown-primary)] hover:bg-white/90">
          <i class="ph ph-magnifying-glass"></i>
          {t('home.cta.button')}
        </a>
      </div>
    </div>
  </section>
</Layout>
