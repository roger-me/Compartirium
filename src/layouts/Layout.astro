---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl } from '../i18n/utils';

interface Props {
  title: string;
  description?: string;
  lang?: 'ca' | 'es';
}

const { lang: propLang } = Astro.props;
const lang = propLang || getLangFromUrl(Astro.url);

const defaultDescriptions = {
  ca: 'Compartirium - Material educatiu en lloguer. Sostenible, assequible, circular.',
  es: 'Compartirium - Material educativo en alquiler. Sostenible, asequible, circular.',
};

const { title, description = defaultDescriptions[lang] } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Compartirium</title>
    <!-- Phosphor Icons -->
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header lang={lang} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
